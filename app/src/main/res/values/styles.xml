<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ThemeOverlay.Baseline" parent=""/>

    <!-- Shrine -->

    <style name="Widget.Shrine.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">@null</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Shrine.Chip</item>
    </style>

    <style name="ShapeAppearanceOverlay.Shrine.Chip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.Shrine.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox"/>

    <style name="Theme.Shrine.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Shrine.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Shrine.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Shrine.BottomSheet</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.Shrine.BottomSheet" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <!-- Fortnightly -->

    <style name="Widget.Fortnightly.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipCornerRadius">@null</item>
    </style>

    <style name="Widget.Fortnightly.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox"/>

    <style name="Theme.Fortnightly.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Fortnightly.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Fortnightly.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Fortnightly.BottomSheet</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.Fortnightly.BottomSheet" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <!-- Crane -->

    <style name="Widget.Crane.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipCornerRadius">@null</item>
    </style>

    <style name="Widget.Crane.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox"/>

    <style name="Theme.Crane.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Crane.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Crane.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Crane.BottomSheet</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.Crane.BottomSheet" parent="">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="TransparentLinearLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:alpha" tools:ignore="DuplicateDefinition">1.0</item>
        <item name="android:state_pressed">true</item>
        <item name="android:alpha" tools:ignore="DuplicateDefinition">0.5</item>
    </style>

</resources>