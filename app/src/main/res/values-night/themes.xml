<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoTogether" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7480CA</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#222222</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorOnErrorContainer">#8E8E8E</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnTertiary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="android:statusBarColor">?colorOnTertiary</item>
    </style>
</resources>